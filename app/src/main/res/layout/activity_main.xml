<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:text="My Assignments"
        android:gravity="center"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="30sp"
        />

    <ScrollView
        android:id="@+id/ScrollMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/Assignment1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/Title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="125dp"
        android:text="Assignment 1"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btnbg"
        />

    <Button
        android:id="@+id/Assignment2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/Assignment1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="75dp"
        android:text="Assignment 2"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btnbg"
        />

    <Button
        android:id="@+id/Assignment3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/Assignment2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="75dp"
        android:text="Assignment 3"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btnbg"
        />

    <Button
        android:id="@+id/Assignment4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/Assignment3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="75dp"
        android:text="Assignment 4"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btnbg"
        />

    <Button
        android:id="@+id/Assignment5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/Assignment4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="75dp"
        android:text="Assignment 5"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btnbg"
        />

    <Button
        android:id="@+id/Assignment7And8"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/Assignment5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="75dp"
        android:text="Assignment 7 and 8"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/btnbg"
        />



</androidx.constraintlayout.widget.ConstraintLayout>